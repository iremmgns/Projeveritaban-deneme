            @Html.LabelFor(m => m.Öğrenci.Danışman.Danışman_Ad)
            @Html.DropDownListFor(m => m.Öğrenci.Danışman.Danışman_Ad, new SelectList(Model.Danışman,"Danışman_Id","Danışman_Ad"), "Danışman Seçiniz", new { @class = "form-control" })
        </div>*@
    <div class="form-group">

        @Html.LabelFor(m => m.Öğrenci.Uzmanlık_Alanı.Uzmanlık_Ad)
        @Html.DropDownListFor(m => m.Öğrenci.Uzmanlık_Alanı.Uzmanlık_Ad, new SelectList(Model.UzmanlıkAlanı, "Uzmanlık_Id", "Uzmanlık_Alanı"), new { @class = "form-control" })
    </div>
