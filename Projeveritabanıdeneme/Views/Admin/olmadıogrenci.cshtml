        @Html.LabelFor(m => m.Öğrenci.Uzmanlık_Eğitimi_Başlama_Tarihi)
        @Html.TextBoxFor(m => m.Öğrenci.Uzmanlık_Eğitimi_Başlama_Tarihi.Value.ToString("dd-MM-yyyy"), new { @class = "form-control" })
    </div>
    <div class="form-group">

        @Html.LabelFor(m => m.Öğrenci.Uzmanlık_Eğitimi_Tamamlama_Tarihi)
        @Html.TextBoxFor(m => m.Öğrenci.Uzmanlık_Eğitimi_Tamamlama_Tarihi.Value.ToString("dd-MM-yyyy"), new { @class = "form-control" })
